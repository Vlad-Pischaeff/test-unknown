{
    "extends": ["eslint:recommended","airbnb-base"],
    "parser": "@babel/eslint-parser",
    "plugins": ["react"],
    "parserOptions": { 
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        },
    },
    "env": { 
        "es6": true,
        "node": true,
        "commonjs": true
    },
    "rules": {
        "global-require": "off",
        "func-names": "off",
        "no-underscore-dangle": "off",
        "no-param-reassign" : "off",
        "max-len": "off",
        "no-continue": "warn",
        "no-await-in-loop": "warn",
        "no-console": "off",
        "indent": ["error", 4]
    },
    "settings": {
        "import/resolver": {
            "babel-module": {}
        }
    },
}